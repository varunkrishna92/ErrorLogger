
@{
    ViewBag.Title = "ViewLogsGraphical";
}

<h2>View Logs Graphical</h2>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Charts</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.2.2/Chart.bundle.min.js"></script>
    <script>
        var chartData =
            {
                labels: [@Html.Raw(ViewBag.appCount_List)],
                datasets: [{
                    label: 'Error Logs',
                    backgroundColor: [
                        "#f990a7",
                        "#aad2ed",
                        "#9966FF",
                        "#99e5e5",
                        "#f7bd83",
                    ],
                    borderWidth: 2,
                    data: [@ViewBag.errorCount_List]
                }]
            };

        window.onload = function () {
            var ctx = document.getElementById("chartarea").getContext("2d");
            window.myBar = new Chart(ctx, {
                type: 'bar',
                data: chartData,
                options:
                    {
                        title:
                            {
                                display: true,
                                text: "Errors per Application"
                            },
                        responsive: true,
                        maintainAspectRation: true
                    }
            });
        }
    </script>
</head>
<body>
    <div style="text-align: center">
        <canvas id="chartarea"></canvas>
    </div>
     
</body>
</html> 